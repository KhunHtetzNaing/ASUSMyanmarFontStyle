<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.htetznaing.asusmmfonts.InstallActivity">

    <ImageView
        android:id="@+id/iv"
        android:layout_centerHorizontal="true"
        android:src="@drawable/font_icon"
        android:layout_width="130dp"
        android:layout_height="130dp" />

    <Button
        android:id="@+id/btnInstall"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_below="@id/iv"
        android:textAllCaps="false"
        android:text="Install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnChange"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_below="@id/btnInstall"
        android:textAllCaps="false"
        android:text="Change Font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.gms.ads.AdView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2780984156359274/9834965915">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_above="@id/adView"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:text="Font are copyrighted by their owner."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
